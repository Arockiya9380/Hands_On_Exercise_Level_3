@model Level_3___Advanced_Patterns.ViewModels.ProductViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
            <li class="breadcrumb-item">
                <a asp-action="Category" asp-route-categorySlug="@Model.CategoryName.ToLower()">
                    @Model.CategoryName
                </a>
            </li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">@Model.Name</h1>
                    
                    <div class="mb-3">
                        <product-rating stars="@Model.Rating" />
                        <span class="ms-2 text-muted">(@Model.Rating out of 5)</span>
                    </div>
                    
                    <div class="product-info mb-4">
                        <p><strong>SKU:</strong> <code>@Model.SKU</code></p>
                        <p><strong>Category:</strong> 
                            <span class="badge bg-primary">@Model.CategoryName</span>
                        </p>
                        
                        @if (Model.IsFeatured)
                        {
                            <p><span class="badge bg-warning">‚≠ê Featured Product</span></p>
                        }
                    </div>
                    
                    <div class="price-section my-4 p-3 bg-light rounded">
                        @if (Model.DiscountPercentage.HasValue && Model.DiscountPercentage > 0)
                        {
                            <p class="mb-1">
                                <span class="text-decoration-line-through text-muted fs-5">
                                    $@Model.Price.ToString("N2")
                                </span>
                                <span class="badge bg-danger ms-2">@Model.DiscountPercentage% OFF</span>
                            </p>
                            <p class="fs-2 fw-bold text-success mb-0">$@Model.FinalPrice.ToString("N2")</p>
                            <p class="text-muted">You save: $@((Model.Price - Model.FinalPrice).ToString("N2"))</p>
                        }
                        else
                        {
                            <p class="fs-2 fw-bold text-primary mb-0">$@Model.Price.ToString("N2")</p>
                        }
                    </div>
                    
                    <div class="description">
                        <h3>Description</h3>
                        <div class="border p-3 rounded">
                            @Html.Raw(Model.Description)
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit Product
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
        
        <div class="col-md-4">
            @await Component.InvokeAsync("FeaturedProducts", new { count = 3 })
        </div>
    </div>
</div>